{
  "htmlWhitespaceSensitivity": "ignore",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "none",
  "bracketSpacing": true,
  "semi": false,
  "useTabs": false,
  "jsxBracketSameLine": false,
  "arrowParens": "always",

  "overrides": [
    {
      "files": ["*.css", "*.scss"],
      "options": {
        "printWidth": 100
      }
    }
  ]
}
